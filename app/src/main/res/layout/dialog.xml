<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="@dimen/_230sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/olive_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_11sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">


        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialogTitle1"
            android:gravity="center"
            android:textSize="@dimen/_19ssp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/attention"
            android:contentDescription="@string/dialogText1" />

        <TextView
            android:id="@+id/tv_dialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialogText1"
            android:gravity="center"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yes"
                android:layout_margin="@dimen/_8sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"
                android:background="@color/olive_1"
                android:gravity="center"
                android:padding="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no"
                android:layout_margin="@dimen/_8sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"
                android:background="@color/olive_1"
                android:gravity="center"
                android:padding="@dimen/_8sdp"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="@dimen/_11sdp"
        android:layout_height="@dimen/_11sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close"
        tools:ignore="ContentDescription"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"/>

</RelativeLayout>