<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YoungHunter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_2</item>
        <item name="colorPrimaryVariant">@color/lime_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/olive_2</item>
        <item name="colorSecondaryVariant">@color/olive_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- COMMON STYLES -->
    <!-- Divider line styles -->
    <style name="Divider">
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--  DASHBOARD FRAGMENT RELATED STYLES  -->
    <!-- Help icon styles -->
    <style name="HelpIcon">
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginRight">@dimen/_6sdp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Dashboard icons -->
    <style name="Dashboard_Icons">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginRight">@dimen/_17sdp</item>
    </style>

    <!-- Dashboard big buttons -->
    <style name="Dashboard_Buttons">
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Section title styles -->
    <style name="SectionTitle">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <!-- Button title style -->
    <style name="ButtonTitle">
        <item name="android:layout_marginLeft">@dimen/_17sdp</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <!-- Button subtitle style -->
    <style name="ButtonSubtitle">
        <item name="android:layout_marginLeft">@dimen/_17sdp</item>
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!-- Dashboard dialog style -->
    <style name="Dashboard_Dialog">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_11sdp</item>
    </style>

    <!-- Dashboard dialog title style -->
    <style name="Dashboard_Dialog_Title">
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <!-- Dashboard dialog buttons style -->
    <style name="Dashboard_Dialog_Buttons">
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <!-- Animations for dialog box -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--  QUIZ FRAGMENT RELATED STYLES  -->
    <!-- Question options styles -->
    <style name="QuestionOptions">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:minHeight">@dimen/_60sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Submit button style -->
    <style name="QuizButton">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_60sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/olive_1</item>
    </style>

    <!-- Question header title styles -->
    <style name="QuizHeaderTitle">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <!-- Question header subtitle styles -->
    <style name="QuizHeaderSubtitle">
        <item name="android:fontFamily">@font/oswald_light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!-- Question container styles -->
    <style name="QuestionField">
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <!-- Timer styles -->
    <style name="QuizTimer">
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Progress bar styles -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">@dimen/_8sdp</item>
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">@color/white</item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/white</item>
    </style>

    <!-- Progress text styles -->
    <style name="ProgressText">
        <item name="android:layout_marginRight">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <!-- RELOAD DIALOG STYLE -->
    <!-- Dialog container style -->
    <style name="ReloadDialog">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/olive_2</item>
        <item name="android:padding">@dimen/_11sdp</item>
    </style>

    <!-- Dialog title style -->
    <style name="DialogTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!-- Dialog text style -->
    <style name="DialogText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <!-- Dialog buttons style -->
    <style name="DialogButton">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/olive_1</item>
        <item name="android:layout_marginLeft">@dimen/_5sdp</item>
        <item name="android:layout_marginRight">@dimen/_5sdp</item>
    </style>

    <!--  FINISH QUIZ FRAGMENT RELATED STYLES  -->
    <!-- Header title -->
    <style name="FinishHeaderTitle">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/oswald_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_25ssp</item>
    </style>

    <!-- Message bubble - Title -->
    <style name="FinishMessage">
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Message bubble - Results -->
    <style name="FinishResult">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>

    <!-- Share / Copy / Continue buttons -->
    <style name="FinishButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">@dimen/_15sdp</item>
    </style>

</resources>