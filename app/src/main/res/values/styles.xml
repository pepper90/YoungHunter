<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YoungHunter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_2</item>
        <item name="colorPrimaryVariant">@color/lime_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/olive_2</item>
        <item name="colorSecondaryVariant">@color/olive_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Animations for dialog box -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--  QUIZ FRAGMENT STYLES  -->
    <!-- Question options styles -->
    <style name="QuestionOptions">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:minHeight">@dimen/_60sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Submit button style -->
    <style name="QuizButton">
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/_60sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/olive_1</item>
    </style>
</resources>